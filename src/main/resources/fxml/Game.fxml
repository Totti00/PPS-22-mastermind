<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="NEVER" xmlns:fx="http://javafx.com/fxml">
    <VBox fx:id="mainContainer" spacing="10" stylesheets="/css/baseStyle.css">

        <GridPane fx:id="border" alignment="CENTER" vgap="20" hgap="20">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

            <ImageView fx:id="gameLogo" GridPane.columnSpan="2" />

            <GridPane fx:id="stone_matrix" alignment="CENTER" hgap="10" vgap="10"
                      GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>

            <GridPane fx:id="hint_stone_matrix" alignment="CENTER" hgap="10" vgap="10"
                      GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>

            <Button fx:id="checkButton" text="Check Code" maxWidth="Infinity"
                    GridPane.columnIndex="0" GridPane.rowIndex="2"/>

            <Label fx:id="labelCurrentTurn" text="Remaining Turns:" maxWidth="Infinity" alignment="CENTER"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <GridPane fx:id="urr_Grid" GridPane.columnIndex="0" GridPane.rowIndex="3" hgap="10">
                <Button fx:id="backButton" maxWidth="Infinity" text="Back" GridPane.columnIndex="0" />
                <Button fx:id="resetGameButton" maxWidth="Infinity" text="Reset" GridPane.columnIndex="1" />
            </GridPane>

            <GridPane fx:id="hsl_Grid" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <Button fx:id="helpButton" maxWidth="Infinity" text="Help" />
            </GridPane>
        </GridPane>
    </VBox>
</ScrollPane>

